
effect Stdio {
    read: () => string,
    write: (string) => void,
}

const hello = () => {
    "hello world"
}

const sayHi = () => {
    log(hello())
}

// TODO when I've got type arguments, make this generic.
const respondWith:
    (string) => <T>(() ={Stdio}> T) => T
 = (responseValue) => <T,>(fn: () ={Stdio}> T) => {
    handle! fn {
        Stdio.read(() => k) => respondWith(responseValue ++ ".")<T>(() => k(responseValue)),
        Stdio.write((v) => k) => {
            log(v);
            respondWith(responseValue ++ "-")<T>(k)
        },
        pure(a) => a
    }
}

