const test1 = () => {
    respondWith("<read>")(() => inner("Yes"))
}

const maybeRaise = (shouldRaise: bool) => {
    if shouldRaise {
        raise!(Stdio.read())
    } else {
        "didn't raise"
    }
    // respondWith("<read>")(() => )
}

const test2 = () => {
    respondWith("<read>")<void>(() => log(maybeRaise(true) ++ maybeRaise(false)))
}

const raiseIf = (check: string) => {
    if raise!(Stdio.read()) == check {
        raise!(Stdio.read())
    } else {
        "didn't raise"
    }
    // respondWith("<read>")(() => )
}

const test3 = () => {
    log(respondWith("<read>")<string>(() => raiseIf("<read>")))
}

const letBind = () => {
    const x = raise!(Stdio.read());
    log(x ++ "Hello")
}

const test4 = () => {
    respondWith("<read>")(letBind)
}



