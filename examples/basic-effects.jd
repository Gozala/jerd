const farther = (name: string): string => {
    log("yes please " ++ name);
    raise!(Stdio.read())
}

const inner = (name: string): void => {
    log(farther("Folks") ++ " from farther");
    log("getting");
    log(name);
    log(raise!(Stdio.read()) ++ " and " ++ raise!(Stdio.read()));
    log("And then " ++ raise!(Stdio.read()));
    log("Dones")
}

